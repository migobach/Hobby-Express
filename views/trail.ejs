<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>
    <h1 class="center">Kodiak Island Trails</h1>
    <hr />
    <div class="row">
      <div class="col s12 m4">
        <h3>Add Trail</h3>
        <form action="/trail" method="post">
          <input type="text" name="title" placeholder="Trail" />
          <button class="btn btn-waves" type="submit">Add</button>
        </form>
      </div>
      <table class="table col m8 s12">
        <thead>
          <th>Name</th>
          <th>x</th>
        </thead>
        <tbody>
          <% trail.forEach( function(movie) { %>
            <tr>
              <td><% trail.title %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>